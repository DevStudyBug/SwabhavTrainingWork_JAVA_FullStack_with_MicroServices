<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="https://jakarta.ee/xml/ns/jakartaee"
	xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
	id="WebApp_ID" version="6.0">
	<display-name>Book Info Display System Using Servlets</display-name>

	<context-param>
		<param-name>appVersion</param-name>
		<param-value>1.2.3</param-value>
	</context-param>
	<context-param>
		<param-name>siteName</param-name>
		<param-value>Book Verse GLobal System</param-value>
	</context-param>

	<!-- landing servlet -->
	<servlet>
		<servlet-name>LandingServlet</servlet-name>
		<servlet-class>com.bookverse.LandingServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>LandingServlet</servlet-name>
		<url-pattern>/welcome</url-pattern>
	</servlet-mapping>

	<!-- Admin Config Servlet -->
	<servlet>
		<servlet-name>AdminConfigServlet</servlet-name>

		<servlet-class>com.bookverse.AdminConfigServlet</servlet-class>
		<init-param>
			<param-name>storeName</param-name>
			<param-value>BookVerse</param-value>
		</init-param>
		<init-param>
			<param-name>adminEmail</param-name>
			<param-value>admin@bookverse.com</param-value>
		</init-param>
		<init-param>
			<param-name>category</param-name>
			<param-value>Science</param-value>
		</init-param>
	</servlet>
	
	<servlet-mapping>
        <servlet-name>AdminConfigServlet</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
<!--     bookverse -->
<!-- Fiction Category Servlet -->
    <servlet>
        <servlet-name>FictionServlet</servlet-name>
        <servlet-class>com.bookverse.BookCategoryServlet</servlet-class>
        <init-param>
            <param-name>storeName</param-name>
            <param-value>BookVerse</param-value>
        </init-param>
        <init-param>
            <param-name>adminEmail</param-name>
            <param-value>admin@bookverse.com</param-value>
        </init-param>
        <init-param>
            <param-name>category</param-name>
            <param-value>Fiction</param-value>
        </init-param>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>FictionServlet</servlet-name>
        <url-pattern>/fiction</url-pattern>
    </servlet-mapping>

    <!-- Science Category Servlet -->
    <servlet>
        <servlet-name>ScienceServlet</servlet-name>
        <servlet-class>com.bookverse.BookCategoryServlet</servlet-class>
        <init-param>
            <param-name>storeName</param-name>
            <param-value>BookVerse</param-value>
        </init-param>
        <init-param>
            <param-name>adminEmail</param-name>
            <param-value>admin@bookverse.com</param-value>
        </init-param>
        <init-param>
            <param-name>category</param-name>
            <param-value>Science</param-value>
        </init-param>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>ScienceServlet</servlet-name>
        <url-pattern>/science</url-pattern>
    </servlet-mapping>

    <!-- Technology Category Servlet -->
    <servlet>
        <servlet-name>TechnologyServlet</servlet-name>
        <servlet-class>com.bookverse.BookCategoryServlet</servlet-class>
        <init-param>
            <param-name>storeName</param-name>
            <param-value>BookVerse</param-value>
        </init-param>
        <init-param>
            <param-name>adminEmail</param-name>
            <param-value>admin@bookverse.com</param-value>
        </init-param>
        <init-param>
            <param-name>category</param-name>
            <param-value>Technology</param-value>
        </init-param>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>TechnologyServlet</servlet-name>
        <url-pattern>/technology</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>welcome</welcome-file>
    </welcome-file-list>

</web-app>